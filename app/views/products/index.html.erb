<style>
  table {
    width: 100%;
    border-collapse: collapse;
    overflow: hidden;
    box-shadow: 0 0 20px rgba(0,0,0,0.1);
    margin-bottom: 5px;
  }

  th,
  td {
    padding: 15px;
    background-color: rgba(255,255,255,0.2);
    text-align: center;
  }

  th {
    text-align: center;
  }
  th {
    background-color: #55608f;
    color: white;
  }

  h2 {
    text-align: center;
    margin-bottom: 10px;
  }
</style>

<div class="container">
  <p id="notice"><%= notice %></p>

  <h2 style="text-align: center">Products</h2>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Type</th>
        <th>Parent gtin</th>
        <th>Gtin</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.product_type %></td>
          <td><%= product.parent_gtin %></td>
          <td><%= product.gtin %></td>
          <td><%= link_to 'Show', product, class: "btn btn-info", style: 'color:#fff' %></td>
          <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-warning", style: 'color:#fff' %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", style: 'color:#fff' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Product', new_product_path, class: "btn btn-primary", style: 'color:#fff'  %>
  <br>
  <br>
  <br>

  <%= link_to 'Return to home', root_path %>
</div>