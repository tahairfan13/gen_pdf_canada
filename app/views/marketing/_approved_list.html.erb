<% if market_products.length > 0 %>
  <% market_products.each do |product| %>
    <table>
      <thead>
      <tr>
        <th>Name</th>
        <th>Product Type</th>
        <th>GTIN Number</th>
        <th colspan="2"></th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <td><%= product.try(:product).try(:name) %></td>
        <td><%= product.try(:product).try(:product_type) %></td>
        <td><%= product.try(:product).try(:gtin) %></td>
        <td><%= link_to "Show", marketing_product_path(product), class: 'btn btn-info', style: 'color:#fff' %></td>
        <td><%= link_to "Download PDF", market_pdf_marketing_product_path(product), class: 'btn btn-success', style: 'color:#fff' %></td>
      </tr>
      </tbody>
    </table>
  <% end %>
<% end %>