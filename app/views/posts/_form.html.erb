  <div class="form-group">
    <%= form.label :child_nutrition %>
    <%= form.text_field :child_nutrition , class:'form-control' %>

    <%= form.label :serving_size %>
    <%= form.number_field :serving_size, class:'form-control' %>

    <%= form.label :calories %>
    <%= form.number_field :calories, class:'form-control' %>

    <%= form.label :fat %>
    <%= form.text_field :fat, class:'form-control' %>

    <%= form.label :cholesterol %>
    <%= form.text_field :cholesterol, class:'form-control' %>

    <%= form.label :sodium %>
    <%= form.text_field :sodium, class:'form-control' %>

    <%= form.label :carbohydrate %>
    <%= form.text_field :carbohydrate, class:'form-control' %>

    <%= form.label :protein %>
    <%= form.text_field :protein, class:'form-control' %>
  </div>

  <h3 style="text-align: center">Information </h3>
  <div class="form-group">

    <%= form.label :availability_date %>
    <%= form.search_field :availability_date, class: "form-control border", type: "date" %>

    <%= form.label :first_order_date %>
    <%= form.search_field :first_order_date, class: "form-control border", type: "date" %>

