<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">

    <%= form.collection_select(:product_id,  Product.is_unapproved,  :id, :name) %>

    <%= form.label :brand %>
    <%= form.text_field :brand, class:'form-control' %>

    <%= form.label :brand_onwer %>
    <%= form.text_field :brand_onwer, class:'form-control' %>
  </div>

  <h3 style="text-align: center"> Package Details </h3>

  <div class="form-group">
      <%= form.label :pack %>
      <%= form.text_field :pack, class:'form-control' %>

      <%= form.label :pack_description %>
      <%= form.text_field :pack_description, class:'form-control' %>

      <%= form.label :gpc_description %>
      <%= form.text_field :gpc_description, class:'form-control' %>

      <%= form.label :gross_weight %>
      <%= form.text_field :gross_weight, class:'form-control' %>

      <%= form.label :country_of_origin %>
      <%= form.text_field :country_of_origin, class:'form-control' %>

      <%= form.label :kosher %>
      <%= form.check_box :kosher, class:'form-control' %>
  </div>


  <h3 style="text-align: center"> Shipping Information </h3>

  <div class="form-grouo">
      <%= form.label :shipping_length %>
      <%= form.text_field :shipping_length , class:'form-control' %>

      <%= form.label :shipping_width %>
      <%= form.text_field :shipping_width, class:'form-control' %>

      <%= form.label :shipping_height %>
