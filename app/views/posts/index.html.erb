<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Gtin number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.code %></td>
        <td><%= post.gtin_number %></td>
        <td><%= link_to 'View More information', post, class: "btn btn-primary", style: 'color:#fff' %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-info", style: 'color:#fff' %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", style: 'color:#fff' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
